<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DividerInHomepage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/nightColorPrimary</item>
        <item name="colorPrimaryDark">@color/nightColorPrimaryDark</item>
        <item name="colorAccent">@color/nightColorAccent</item>
    </style>

    <style name="PostActivityTheme" parent="AppTheme">
        <item name="contentColor">@color/contentColor</item>
        <item name="signatureColor">@color/white</item>
        <item name="deleteItemColor">#FF808080</item>
        <item name="QuoteViewBackground">#FF808080</item>
        <item name="titleColor">@color/white</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="nameColor">#9e9e9e</item>
        <item name="contentColor">#9e9e9e</item>
        <item name="titleColor">#000000</item>
    </style>
</resources>