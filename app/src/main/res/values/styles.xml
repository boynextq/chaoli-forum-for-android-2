    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="DividerInHomepage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#000</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="TitleInSettings">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="TitleInSignUp">
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="QuestionItem">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="EdtTxtInSignUp">
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/et</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="nameColor">#9e9e9e</item>
        <item name="contentColor">#9e9e9e</item>
        <item name="titleColor">#000000</item>
    </style>

    <style name="PostActivityTheme" parent="AppTheme">
        <item name="contentColor">@color/contentColor</item>
        <item name="signatureColor">@color/black</item>
        <item name="deleteItemColor">#FF808080</item>
        <item name="QuoteViewBackground">#F1F1F1</item>
        <item name="titleColor">#000000</item>
    </style>
    
    <style name="HomepageActivityTheme" parent="AppTheme">

    </style>

    <style name="Widget.MyApp.ActionBar" parent="AppBaseTheme">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
    </style>
