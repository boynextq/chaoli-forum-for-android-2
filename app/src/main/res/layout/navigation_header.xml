<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.daquexian.chaoli.forum.viewmodel.MainActivityVM"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/avatar_marginLeft"
        android:paddingStart="@dimen/avatar_marginLeft"
        android:paddingTop="@dimen/avatar_marginTop"
        android:background="@drawable/header"
        android:id="@+id/loginHWnd">
        <com.daquexian.chaoli.forum.meta.AvatarView
            android:layout_width="@dimen/avatar_diameter"
            android:layout_height="@dimen/avatar_diameter"
            app:length="@{72}"
            app:imageSuffix="@{viewModel.myAvatarSuffix}"
            app:userId="@{viewModel.myUserId}"
            app:username="@{viewModel.myUsername}"
            app:isLoggedIn="@{viewModel.isLoggedIn}"
            android:clickable="@{viewModel.loginComplete &amp;&amp; !viewModel.failed}"
            android:onClick="@{viewModel.onClickAvatar}"
            android:id="@+id/avatar"/>
        <RelativeLayout
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="56dp">
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loginHWndUsername"
                android:text="@{viewModel.isLoggedIn ? viewModel.myUsername : @string/click_login}"
                android:textSize="14sp"
                android:textColor="#FFFFFF"/>
            <TextView
                android:id="@+id/signature_txt"
                android:ellipsize="end"
                android:layout_marginBottom="7dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@{viewModel.mySignature}"
                android:textColor="#FFFFFF"/>
        </RelativeLayout>
    </LinearLayout>
</layout>
